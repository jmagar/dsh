{
  "name": "dsh",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run start -w frontend",
    "dev:backend": "npm run dev -w backend",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "build:shared": "npm run build -w shared",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test -w frontend",
    "test:backend": "npm run test -w backend",
    "test:memory-leaks": "node --expose-gc backend/tests/memory-leaks.js",
    "test:db": "jest --config backend/jest.config.js --testMatch '**/tests/db/**/*.test.js'",
    "test:e2e": "cypress run",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "npm run lint -w frontend",
    "lint:backend": "npm run lint -w backend",
    "type-check": "npm run type-check:frontend && npm run type-check:backend && npm run type-check:shared",
    "type-check:frontend": "npm run type-check -w frontend",
    "type-check:backend": "npm run type-check -w backend",
    "type-check:shared": "npm run type-check -w shared",
    "benchmark": "npm run benchmark:frontend && npm run benchmark:backend",
    "benchmark:frontend": "ts-node frontend/tests/benchmark.ts",
    "benchmark:backend": "ts-node backend/tests/benchmark.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docs": "typedoc --out docs/api src",
    "test:watch": "ts-node node_modules/jest/bin/jest.js --watch",
    "stop:frontend": "kill-port 3000",
    "stop:backend": "kill-port 3001",
    "stop:all": "npm run stop:frontend && npm run stop:backend",
    "prisma:generate": "npm run stop:all && cd backend && npm run prisma:generate",
    "start:frontend": "npm run start -w frontend",
    "start:backend": "npm run start -w backend",
    "restart:frontend": "npm run stop:frontend && npm run start:frontend",
    "restart:backend": "npm run stop:backend && npm run start:backend",
    "restart": "npm run stop:frontend && npm run stop:backend && npm run start:backend && npm run start:frontend",
    "profile": "node --prof",
    "analyze:bundle": "source-map-explorer 'frontend/dist/**/*.js'",
    "benchmark:record": "node scripts/benchmark-recorder.js",
    "memory:profile": "node --inspect-brk --max-old-space-size=4096 backend/src/index.ts"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "kill-port": "^2.0.1",
    "node-html-parser": "^6.1.13",
    "prettier": "^3.2.4",
    "source-map-explorer": "^2.5.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.17.1",
    "typedoc-plugin-mermaid": "^1.1.1",
    "typescript": "^5.2.2",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
