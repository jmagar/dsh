{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*", 
    "src/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
