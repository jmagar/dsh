{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", 
    "src/**/*.json"
  ],
  "exclude": ["dist", "node_modules"]
}
