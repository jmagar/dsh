{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["dist", "node_modules"]
}
