{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ES2020",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "react", "@types/react"],
    "paths": {
      "*": ["src/*", "tests/*"],
      "@dsh/shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "src/**/*", 
    "src/**/*.json", 
    "tests/**/*.ts", 
    "tests/**/*.tsx", 
    "tests/**/*.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
