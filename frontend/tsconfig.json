{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ES2020",
    "jsx": "react-jsx",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["src/*"],
      "@dsh/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json", "tests/**/*", "tests/**/*.json"],
  "references": [{ "path": "../shared" }]
}
